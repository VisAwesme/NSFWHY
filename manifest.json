{
  "manifest_version": 2,
  "name": "NSFWHY",
  "version": "0.1",
  "description": "Not Safe For Why â€” keeps you away from NSFW sites with empathy and memes.",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "notifications"
  ],
  "background": {
    "scripts": ["background/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "assets/icon.png"
    }
  },
  "icons": {
    "48": "assets/icon.png"
  }
}